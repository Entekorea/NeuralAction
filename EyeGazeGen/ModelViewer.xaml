<Window x:Class="EyeGazeGen.ModelViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EyeGazeGen"
        mc:Ignorable="d"
        Title="ModelViewer" MinWidth="420" MinHeight="320" Height="432" Width="729">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="120"/>
        </Grid.ColumnDefinitions>
        <local:ModelViewerControl x:Name="viewControl"/>
        <Grid Grid.Column="1">
            <StackPanel>
                <Button Content="Create Eyes Model" Height="30" x:Name="Bt_Create_EyesModel" Click="Bt_Create_EyesModel_Click"/>
                <StackPanel Margin="0,5">
                    <TextBox x:Name="Tb_NewSize" Height="24" Text="0,0" VerticalContentAlignment="Center"/>
                    <Button Content="ChangeSize" x:Name="Bt_ChangeSize" Click="Bt_ChangeSize_Click"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
