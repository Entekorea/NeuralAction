<Window x:Class="EyeGazeGen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EyeGazeGen"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBlock Text="Vision EyeGaze DataSet Generator" HorizontalAlignment="Center" Margin="10" Opacity="0.66"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="150" x:Name="Panel_StartMenu">
            <TextBlock Text="Session Name"/>
            <TextBox Text="Windows" Margin="0,5" Height="24" VerticalContentAlignment="Center" x:Name="Tb_Session"/>
            <Button Content="Start" x:Name="Bt_Start" Click="Bt_Start_Click"/>
        </StackPanel>
        <Button x:Name="Bt_Stop" Opacity="0.5" Content="Stop" HorizontalAlignment="Center" VerticalAlignment="Center" Width="80" Height="30" Visibility="Hidden" Click="Bt_Stop_Click"/>
        <Canvas x:Name="canvas">
            <Grid x:Name="pointer" Canvas.Top="50" Canvas.Left="50">
                <Ellipse Width="20" Height="20" Fill="Red" Margin="-1000000" x:Name="ellipse"/>
            </Grid>
        </Canvas>
    </Grid>
</Window>
