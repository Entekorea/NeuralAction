<Window x:Class="WpfApp2.HighlightWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="HighlightWindow" Height="300" Width="300" AllowsTransparency="True" Background="Transparent" WindowStyle="None" Topmost="True" ShowInTaskbar="False">
    <Grid>
        <Rectangle Stroke="{Binding BorderColor}" StrokeThickness="1"/>
    </Grid>
</Window>
