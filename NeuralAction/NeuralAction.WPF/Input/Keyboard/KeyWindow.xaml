<Window x:Class="NeuralAction.WPF.KeyWindow"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NeuralAction.WPF"
        mc:Ignorable="d"
        Title="NeuralAction" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="{x:Null}" Topmost="True" AllowsTransparency="True" ShowInTaskbar="False" Icon="/NeuralAction.WPF;component/Resources/icon_main.ico">
    <Window.CacheMode>
        <BitmapCache SnapsToDevicePixels="True"/>
    </Window.CacheMode>
    <Grid>
        <Rectangle Fill="#01000000" MouseDown="Rectangle_MouseDown"/>
        <local:KeyControl x:Name="Keyboard" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Grid>
</Window>
