<Window x:Class="NeuralAction.WPF.KeyWindow"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NeuralAction.WPF"
        xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing" 
        xmlns:keypad="clr-namespace:NeuralAction.WPF"
        mc:Ignorable="d"
        Title="keyWindow" Height="1000" Width="1600" WindowStyle="None" Foreground="{x:Null}" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" Background="{x:Null}" Topmost="True" AllowsTransparency="true" ShowInTaskbar="False">
    <Window.CacheMode>
        <BitmapCache EnableClearType="True" SnapsToDevicePixels="True"/>
    </Window.CacheMode>
    <Grid>
        <Grid.CacheMode>
            <BitmapCache EnableClearType="True" SnapsToDevicePixels="True"/>
        </Grid.CacheMode>

        <keypad:Key x:Name="Keyboard" MouseLeftButtonDown="Keyboard_MouseLeftButtonDown"></keypad:Key>
        <TextBlock HorizontalAlignment="Left" Margin="1544,20,0,0" TextWrapping="Wrap" Text="X" VerticalAlignment="Top" FontSize="50" Foreground="White" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown" />

    </Grid>
</Window>
